{
    "name": "@idealjs/drag-drop",
    "version": "0.1.0",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist",
        "package.json",
        "README.md"
    ],
    "dependencies": {},
    "scripts": {
        "build": "rm -rf dist | tsc"
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ],
        "plugins": [
            "simple-import-sort"
        ],
        "rules": {
            "simple-import-sort/sort": "warn",
            "react-hooks/exhaustive-deps": [
                1,
                {
                    "enableDangerousAutofixThisMayCauseInfiniteLoops": true
                }
            ]
        }
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "eslint-plugin-simple-import-sort": "5.0",
        "react-scripts": "4.0.0",
        "@types/node": "^12.0.0",
        "@types/react": "^16.9.53",
        "@types/react-dom": "^16.9.8",
        "typescript": "^4.0.3"
    },
    "peerDependencies": {
        "react": "^17.0.1",
        "react-dom": "^17.0.1"
    }
}
